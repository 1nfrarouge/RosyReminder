<%- include('../partials/header') %>
<div class="reminder-form-container">
  <h3 class="reminder-form-title">SET A REMINDER</h3>
  <h5 class="reminder-form-subtitle">Always Remember the Moments that Matter â€” Set a Floral Reminder Today.</h5>
  
  <form action="/reminders" method="POST" class="reminder-form">
    <div class="reminder-form-group">
      <div class="form-left">
        <h4 class="reminder-form-label">Recipient Name:</h4>
        <p class="reminder-form-paragraph">Who will be receiving flowers,</p>
      </div>
      <input class="reminder-form-input" name="recipient" required>
    </div>

    <div class="reminder-form-group">
      <div class="form-left">
        <h4 class="reminder-form-label">Date:</h4>
        <p class="reminder-form-paragraph">The date of the event,</p>
      </div>
      <input class="reminder-form-input" name="date" required type="date">
    </div>

    <div class="reminder-form-group">
      <div class="form-left">
        <h4 class="reminder-form-label">Occasion:</h4>
        <p class="reminder-form-paragraph">List an occasion such as: anniversary, birthday, baby, wedding, graduation, thank you, or holiday!</p>
      </div>
      <input class="reminder-form-input" name="occasion" required>
    </div>

    <button type="submit" class="reminder-form-button">ADD REMINDER</button>
  </form>
</div>
<%- include('../partials/footer') %>
