<%- include('../partials/header') %>
<h2>MY REMINDERS</h2>

<% if (reminders.length) { %>
    <% reminders.forEach(function(reminder) { %>
        <article class="reminder">
            <h4>Recipient: <%= reminder.recipient %></h4>
            <h4>Date: <%= reminder.date.toLocaleDateString() %></h4>
            <h4>Occasion: <%= reminder.occasion %></h4>
            <a href="/reminders/<%= reminder._id %>/edit">EDIT</a>
            <form action="/reminders/<%= reminder._id %>?_method=DELETE" method="POST">
                <button type="submit">DELETE</button>
              </form>
        </article>
    <% }) %>
<% } else { %>
    <p>NO REMINDERS YET</p>
<% } %>

